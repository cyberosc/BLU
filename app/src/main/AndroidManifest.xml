            android:name="com.google.android.geo.API_KEY"
            android:value="AIzaSyCp6BWEMWytgNJxA41VBgRU1k8_DhMjlVc" />

        <activity
            android:name="com.acktos.blu.presentation.SingInActivity"
            android:label="@string/title_activity_sing_in"
